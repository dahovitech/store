{% extends 'admin/base.html.twig' %}

{% block title %}
    {{ 'language.edit.title'|trans({'%name%': language.name}, 'admin') }} - {{ 'admin.title'|trans({}, 'admin') }} - {{ setting('siteName') }} 
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-pencil me-2 text-primary"></i>{{ 'language.edit.heading'|trans({'%name%': language.name}, 'admin') }}
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('admin_language_show', {id: language.id}) }}" class="btn btn-outline-info me-2">
            <i class="bi bi-eye me-2"></i>{{ 'action.view'|trans({}, 'admin') }}
        </a>
        <a href="{{ path('admin_language_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>{{ 'action.back_to_list'|trans({}, 'admin') }}
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.code, {
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.sortOrder, {
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.name, {
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.nativeName, {
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {% if form.isActive.vars.help %}
                                <small class="form-text text-muted">{{ form.isActive.vars.help|trans({}, 'admin') }}</small>
                            {% endif %}
                            {% if language.default %}
                                <small class="form-text text-warning">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    {{ 'language.edit.cannot_disable_default'|trans({}, 'admin') }}
                                </small>
                            {% endif %}
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                {{ form_widget(form.isDefault, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isDefault, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {% if form.isDefault.vars.help %}
                                <small class="form-text text-muted">{{ form.isDefault.vars.help|trans({}, 'admin') }}</small>
                            {% endif %}
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-check-lg me-2"></i>{{ 'action.save'|trans({}, 'admin') }}
                        </button>
                        <a href="{{ path('admin_language_show', {id: language.id}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-2"></i>{{ 'action.cancel'|trans({}, 'admin') }}
                        </a>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>{{ 'language.edit.info.title'|trans({}, 'admin') }}
                </h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">{{ 'language.table.status'|trans({}, 'admin') }} :</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-{{ language.active ? 'success' : 'secondary' }}">
                            {{ language.active ? 'common.status.active'|trans({}, 'admin') : 'common.status.inactive'|trans({}, 'admin') }}
                        </span>
                        {% if language.default %}
                            <span class="badge bg-primary ms-1">{{ 'common.status.default'|trans({}, 'admin') }}</span>
                        {% endif %}
                    </dd>

                </dl>
            </div>
        </div>

        {% if not language.default %}
            <div class="card mt-3">
                <div class="card-header bg-danger text-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>{{ 'language.show.danger_zone'|trans({}, 'admin') }}
                    </h6>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        {{ 'language.edit.delete_warning'|trans({'%count%': language.serviceTranslations|length}, 'admin') }}
                    </p>
                    <form method="post"
                          action="{{ path('admin_language_delete', {id: language.id}) }}"
                          onsubmit="return confirm('{{ 'language.confirm.delete'|trans({'%name%': language.name}, 'admin') }}')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ language.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash me-2"></i>{{ 'action.delete'|trans({}, 'admin') }}
                        </button>
                    </form>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}