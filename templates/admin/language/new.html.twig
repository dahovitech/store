{% extends 'admin/base.html.twig' %}

{% block title %}
    {{ 'language.new.title'|trans({}, 'admin') }} - {{ 'admin.title'|trans({}, 'admin') }} - {{ setting('siteName') }} 
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-plus-circle me-2 text-success"></i>{{ 'language.new.heading'|trans({}, 'admin') }}
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('admin_language_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>{{ 'action.back_to_list'|trans({}, 'admin') }}
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.code, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'language.form.code.placeholder'|trans({}, 'admin')
                                },
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.sortOrder, {
                                'attr': {
                                    'class': 'form-control',
                                    'value': 0
                                },
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.name, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'language.form.name.placeholder'|trans({}, 'admin')
                                },
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.nativeName, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'language.form.nativeName.placeholder'|trans({}, 'admin')
                                },
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {% if form.isActive.vars.help %}
                                <small class="form-text text-muted">{{ form.isActive.vars.help|trans({}, 'admin') }}</small>
                            {% endif %}
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                {{ form_widget(form.isDefault, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isDefault, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {% if form.isDefault.vars.help %}
                                <small class="form-text text-muted">{{ form.isDefault.vars.help|trans({}, 'admin') }}</small>
                            {% endif %}
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-check-lg me-2"></i>{{ 'action.create'|trans({}, 'admin') }}
                        </button>
                        <a href="{{ path('admin_language_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-2"></i>{{ 'action.cancel'|trans({}, 'admin') }}
                        </a>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>{{ 'language.new.tips.title'|trans({}, 'admin') }}
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <strong>{{ 'language.form.code'|trans({}, 'admin') }} :</strong>
                        {{ 'language.new.tips.code'|trans({}, 'admin') }}
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <strong>{{ 'language.form.name'|trans({}, 'admin') }} :</strong>
                        {{ 'language.new.tips.name'|trans({}, 'admin') }}
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <strong>{{ 'language.form.nativeName'|trans({}, 'admin') }} :</strong>
                        {{ 'language.new.tips.nativeName'|trans({}, 'admin') }}
                    </li>
                    <li class="mb-0">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <strong>{{ 'language.form.sortOrder'|trans({}, 'admin') }} :</strong>
                        {{ 'language.new.tips.sortOrder'|trans({}, 'admin') }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}